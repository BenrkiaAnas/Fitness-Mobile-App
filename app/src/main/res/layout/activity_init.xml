<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_color">


    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:padding="5dp"
        android:src="@mipmap/left_arrow" />





    <androidx.cardview.widget.CardView
        android:id="@+id/cardviewone"
        android:layout_marginBottom="60dp"
        android:layout_below="@+id/banner"
        android:layout_width="match_parent"
        android:layout_marginTop="-100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/text_15"
        android:layout_marginRight="@dimen/text_15"
        android:orientation="horizontal"

        app:cardCornerRadius="20dp"
        android:layout_marginVertical="100dp"
        app:cardElevation="20dip">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_above="@+id/cardviewone"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:id="@+id/rel12"
                        android:layout_width="100dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/a3_grad"
                        android:layout_height="100dp">

                        <ImageView
                            android:id="@+id/iv_alcohol"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/img_body_mass" />
                    </RelativeLayout>
                </RelativeLayout>




                <TextView
                    android:id="@+id/tv_alcohol"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_below="@+id/iv_alcohol"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="Infos Personnel"
                    android:textColor="@color/black"
                    android:layout_marginBottom="10dp"
                    android:textSize="@dimen/textsize_16" />

                <LinearLayout
                    android:id="@+id/ll_bmi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/text_20"
                    android:layout_marginRight="@dimen/text_20"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <EditText
                            android:id="@+id/et_drinkvolume"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="7"
                            android:background="@drawable/corner2"
                            android:hint="Kg"
                            android:imeOptions="actionNext"
                            android:inputType="numberDecimal"
                            android:paddingLeft="10dp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:textSize="@dimen/textsize_14" />

                        <EditText
                            android:id="@+id/et_alcohol_level"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="3"
                            android:background="@drawable/corner2"
                            android:gravity="center"
                            android:hint="Poids"
                            android:imeOptions="actionNext"
                            android:inputType="numberDecimal"
                            android:paddingLeft="5dp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:textSize="@dimen/textsize_14" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <EditText
                            android:id="@+id/et_timepassed"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_weight="7"
                            android:background="@drawable/corner2"
                            android:hint="Cm"
                            android:imeOptions="actionNext"
                            android:inputType="numberDecimal"
                            android:paddingLeft="10dp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:textSize="@dimen/textsize_14" />

                        <TextView
                            android:id="@+id/tv_timeunit"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="3"
                            android:background="@drawable/corner2"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="Taille"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:textSize="@dimen/textsize_14" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <EditText
                            android:id="@+id/et_weight"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_weight="7"
                            android:background="@drawable/corner2"
                            android:hint="18"
                            android:imeOptions="actionDone"
                            android:inputType="numberDecimal"
                            android:paddingLeft="10dp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:textSize="@dimen/textsize_14" />

                        <TextView
                            android:id="@+id/tv_weightunit"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="3"
                            android:background="@drawable/corner2"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="Age"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:textSize="@dimen/textsize_14" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <TextView
                            android:id="@+id/tv_genderunit"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/corner2"
                            android:drawableRight="@mipmap/down"
                            android:gravity="center"
                            android:hint="Homme"
                            android:paddingLeft="5dp"
                            android:paddingRight="10dp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:textSize="@dimen/textsize_14" />

                        <TextView
                            android:id="@+id/tv_gender"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="3"
                            android:background="@drawable/corner2"
                            android:drawableRight="@drawable/down_arrow"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="Femme"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:textSize="@dimen/textsize_14"
                            android:visibility="gone" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/tv_search_bloodalcohol_content"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/a3_grad"
                        android:gravity="center"
                        android:layout_marginBottom="15dp"
                        android:text="Completer Profil"
                        android:textColor="@color/colorSkyBlue"
                        android:textColorHint="@color/white"
                        android:textSize="@dimen/textsize_14"
                        />


                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>

</RelativeLayout>
